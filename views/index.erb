<h2>Welcome to Pizza House!</h2>
<div class="row">
    <% @products.each do |p| %>
        <div class="col-md-3">
            <div>
                <%= p.title %>
            </div>
            <div>
                <img src="<%= p.path_to_image %>" width="250" height="200"/>
            </div>
            <div>
                <%= p.description %>
            </div>
            <div>
                <%= p.size %>
            </div>
            <div>
                <%= p.price %>
            </div>
            <div>
                <button class="btn btn-primary" onclick="something()">Click me</button>
            </div>
        </div>
    <% end %>
</div>