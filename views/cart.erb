<h2>Your Cart</h2>

<div id="cart">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price, euro</th>
      <th scope="col">Quantity, pieces</th>
    </tr>
  </thead>
  <tbody>

    <% total_price = 0 %>  
    <% total_quantity = 0 %>
    
    <% @order_var.each_with_index do |item, index| %>
    
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price*item[1].to_i %>
    <% total_quantity += item[1].to_i %> 
    <% end %>

    <tr>
        <th scope="row"></th>
        <td></td>
        <td></td>
        <td><%= total_quantity %></td>
    </tr>

    <tr>
        <th scope="row"></th>
        <td></td>
        <td></td>
        <td>Total sum, euro: <%= total_price %></td>
    </tr>

  </tbody>
</table>

<form action="/clients" method="POST" role="form">
    
    <input name="client[scope]" type="hidden" value="<%= @new_orders %>" />

    <div class="form-group">
        <label>Name:</label>
        <input name="client[name]" type="text" class="form-control" placeholder="Enter your name"/>
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input name="client[phone]" type="text" class="form-control" placeholder="Enter your phone" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <textarea name="client[address]" type="text" class="form-control" placeholder="Enter your address"></textarea>
    </div>

    <button type="submit" class="btn btn-success btn-lg">Submit order</button>
    <button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>

</form>
</div>