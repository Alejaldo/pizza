<h2>Your Cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price, euro</th>
      <th scope="col">Quantity, pieces</th>
    </tr>
  </thead>
  <tbody>

    <% total_price = 0 %>  
    <% total_quantity = 0 %>
    <% @order_var.each_with_index do |item, index| %>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price*item[1].to_i %>
    <% total_quantity += item[1].to_i %> 
    <% end %>

    <tr>
        <th scope="row"></th>
        <td></td>
        <td></td>
        <td><%= total_quantity %></td>
    </tr>

    <tr>
        <th scope="row"></th>
        <td></td>
        <td></td>
        <td>Total sum, euro: <%= total_price %></td>
    </tr>

  </tbody>
</table>  